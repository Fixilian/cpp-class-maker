{
  "name": "cpp-class-maker",
  "displayName": "C/C++ Class Maker",
  "description": "Cpp class maker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "cppClassMaker.newClass",
        "title": "New Class",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      },
      {
        "command": "cppClassMaker.newClassNoTest",
        "title": "New Class (No Test)",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      },
      {
        "command": "cppClassMaker.newHeader",
        "title": "New Header",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      },
      {
        "command": "cppClassMaker.newTemplateClass",
        "title": "New Template Class",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      },
      {
        "command": "cppClassMaker.newTemplateClassNoTest",
        "title": "New Template Class (No Test)",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      },
      {
        "command": "cppClassMaker.newCStruct",
        "title": "New C Struct",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      },
      {
        "command": "cppClassMaker.newCStructNoTest",
        "title": "New C Struct (No Test)",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      },
      {
        "command": "cppClassMaker.newCHeader",
        "title": "New C Header",
        "enablement": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
      }
    ],

    "menus": {
      "explorer/context": [
        {
          "group": "navigation",
          "submenu": "cppClassMaker.make",
          "when": "explorerViewletVisible && filesExplorerFocus && explorerResourceIsFolder"
        }
      ],
      "cppClassMaker.make": [
        {
          "command": "cppClassMaker.newClass",
          "group": "navigation"
        },
        {
          "command": "cppClassMaker.newClassNoTest",
          "group": "navigation"
        },
        {
          "command": "cppClassMaker.newHeader",
          "group": "navigation"
        },
        {
          "command": "cppClassMaker.newTemplateClass",
          "group": "navigation"
        },
        {
          "command": "cppClassMaker.newTemplateClassNoTest",
          "group": "navigation"
        },
        {
          "command": "cppClassMaker.newCStruct",
          "group": "2_c_files"
        },
        {
          "command": "cppClassMaker.newCStructNoTest",
          "group": "2_c_files"
        },
        {
          "command": "cppClassMaker.newCHeader",
          "group": "2_c_files"
        }
      ]
    },

    "submenus": [
      {
        "id": "cppClassMaker.make",
        "label": "New Class"
      }
    ],

    "configuration": [
      {
        "title": "C/C++ Class Maker",
        "id": "cppClassMaker.main",
        "properties": {
          "cppClassMaker.main.AutoAddToBuildSystem": {
            "order": 0,
            "type": "boolean",
            "default": true,
            "description": "Allow to automatically register newly created files in the build system configuration."
          },
          "cppClassMaker.main.AutoAddToSourceControlManager": {
            "order": 1,
            "type": "boolean",
            "default": false,
            "description": "Allow to automatically add newly created files to the Source Control Manager (SCM)."
          }
        }
      },
      {
        "title": "C++",
        "id": "cppClassMaker.cpp",
        "properties": {
          "cppClassMaker.cpp.fileNameCase": {
            "order": 0,
            "type": "string",
            "enum": ["Untouched", "PascalCase", "camelCase", "snake_case"],
            "default": "Untouched",
            "description": "Determines the case of all file names."
          },
          "cppClassMaker.cpp.namespace": {
            "order": 1,
            "type": "string",
            "default": "mynamespace",
            "description": "Namespace with which files will be created."
          },
          "cppClassMaker.cpp.headerFileExtension": {
            "order": 2,
            "type": "string",
            "default": ".hpp",
            "description": "Extension with which header files will be created."
          },
          "cppClassMaker.cpp.sourceFileExtension": {
            "order": 3,
            "type": "string",
            "default": ".cpp",
            "description": "Extension with which source files will be created."
          },
          "cppClassMaker.cpp.includeDirectoryPath": {
            "order": 4,
            "type": "string",
            "default": "include",
            "description": "Relative path from the workspace directory to the include directory."
          },
          "cppClassMaker.cpp.sourceDirectoryPath": {
            "order": 5,
            "type": "string",
            "default": "src",
            "description": "Relative path from the workspace directory to the source directory."
          },
          "cppClassMaker.cpp.testDirectoryPath": {
            "order": 6,
            "type": "string",
            "default": "test",
            "description": "Relative path from the workspace directory to the test directory."
          },
          "cppClassMaker.cpp.templates.includeGuard": {
            "order": 7,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${PATH}_${NAME_SCREAM}_H",
            "description": "Template for include guard."
          },
          "cppClassMaker.cpp.templates.headerFileName": {
            "order": 8,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${FILE_NAME}${HPP}",
            "description": "Template for header file name."
          },
          "cppClassMaker.cpp.templates.sourceFileName": {
            "order": 9,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${FILE_NAME}${CPP}",
            "description": "Template for source file name."
          },
          "cppClassMaker.cpp.templates.testFileName": {
            "order": 10,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${FILE_NAME}Test${CPP}",
            "description": "Template for test file name."
          },
          "cppClassMaker.cpp.templates.emptyHeaderFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#ifndef ${guard=INCLUDE_GUARD}\n#define ${guard}\n\nnamespace ${namespace=NAMESPACE} {\n\n\n} // namespace ${namespace}\n\n#endif // ${guard}\n",
            "description": "Template for empty header file."
          },
          "cppClassMaker.cpp.templates.classHeaderFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#ifndef ${guard=INCLUDE_GUARD}\n#define ${guard}\n\nnamespace ${namespace=NAMESPACE} {\n\nclass ${class_name=NAME} {\npublic:\n    ${class_name}();\n    ~${class_name}();\n\nprivate:\n\n};\n\n} // namespace ${namespace}\n\n#endif // ${guard}\n",
            "description": "Template for class header file."
          },
          "cppClassMaker.cpp.templates.classSourceFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#include \"${HEADER}\"\n\nnamespace ${namespace=NAMESPACE} {\n\n\n\n} // namespace ${namespace}\n",
            "description": "Template for class source file."
          },
          "cppClassMaker.cpp.templates.classTestFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#include <gmock/gmock.h>\n#include <gtest/gtest.h>\n\n#include <vector>\n#include <string>\n\n#include \"${HEADER_PATH}\"\n\nusing namespace std;\nusing namespace ${NAMESPACE};\n\nTEST(${NAME}Test, TestCase) {\n\n}\n",
            "description": "Template for class test file."
          },
          "cppClassMaker.cpp.templates.templateClassHeaderFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#ifndef ${guard=INCLUDE_GUARD}\n#define ${guard}\n\nnamespace ${namespace=NAMESPACE} {\n\ntemplate <typename T>\nclass ${class_name=NAME} {\npublic:\n    ${class_name}();\n    ~${class_name}();\n\nprivate:\n\n};\n\n} // namespace ${namespace}\n\n#endif // ${guard}\n",
            "description": "Template for template class header file."
          }
        }
      },
      {
        "title": "C",
        "id": "cppClassMaker.c",
        "properties": {
          "cppClassMaker.c.fileNameCase": {
            "order": 0,
            "type": "string",
            "enum": ["Untouched", "PascalCase", "camelCase", "snake_case"],
            "default": "Untouched",
            "description": "Determines the case of all file names."
          },
          "cppClassMaker.c.headerFileExtension": {
            "order": 1,
            "type": "string",
            "default": ".h",
            "description": "Extension with which header files will be created."
          },
          "cppClassMaker.c.sourceFileExtension": {
            "order": 2,
            "type": "string",
            "default": ".c",
            "description": "Extension with which source files will be created."
          },
          "cppClassMaker.c.includeDirectoryPath": {
            "order": 3,
            "type": "string",
            "default": "include",
            "description": "Relative path from the workspace directory to the include directory."
          },
          "cppClassMaker.c.sourceDirectoryPath": {
            "order": 4,
            "type": "string",
            "default": "src",
            "description": "Relative path from the workspace directory to the source directory."
          },
          "cppClassMaker.c.testDirectoryPath": {
            "order": 5,
            "type": "string",
            "default": "test",
            "description": "Relative path from the workspace directory to the test directory."
          },
          "cppClassMaker.c.templates.includeGuard": {
            "order": 6,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${PATH}_${NAME_SCREAM}_H",
            "description": "Template for include guard."
          },
          "cppClassMaker.c.templates.headerFileName": {
            "order": 7,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${FILE_NAME}${H}",
            "description": "Template for header file name."
          },
          "cppClassMaker.c.templates.sourceFileName": {
            "order": 7,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${FILE_NAME}${C}",
            "description": "Template for source file name."
          },
          "cppClassMaker.c.templates.testFileName": {
            "order": 8,
            "type": "string",
            "pattern": "^(?:\\$\\{[A-Za-z0-9_-]+\\}|[A-Za-z0-9_])+$",
            "patternErrorMessage": "Template must consist only of letters, digits, underscores, and ${var} expressions.",
            "default": "${FILE_NAME}_test${C}",
            "description": "Template for test file name."
          },
          "cppClassMaker.c.templates.emptyHeaderFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#ifndef ${guard=INCLUDE_GUARD}\n#define ${guard}\n\n\n#endif // ${guard}",
            "description": "Template for empty header file."
          },
          "cppClassMaker.c.templates.structHeaderFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#ifndef ${guard=INCLUDE_GUARD}\n#define ${guard}\n\ntypedef struct ${class_name=NAME} {\n\n} ${class_name};\n\n\n\n#endif // ${guard}",
            "description": "Template for struct header file."
          },
          "cppClassMaker.c.templates.structSourceFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#include \"${C_HEADER}\"\n",
            "description": "Template for struct source file."
          },
          "cppClassMaker.c.templates.structTestFile": {
            "type": "string",
            "editPresentation": "multilineText",
            "default": "#include \"${C_HEADER}\"\n",
            "description": "Template for struct test file."
          }
        }
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
