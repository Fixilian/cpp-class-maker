{
  "name": "cpp-class-maker",
  "displayName": "Cpp class maker",
  "description": "Cpp class maker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  
  "contributes": {
    "commands": [
      {
        "command": "cpp-class-maker.initProject",
        "title": "Init project"
      },
      {
        "command": "cpp-class-maker.newClass",
        "title": "New Class"
      },
      {
        "command": "cpp-class-maker.newClassNoTest",
        "title": "New Class w/o test"
      },
      {
        "command": "cpp-class-maker.newHeader",
        "title": "New Header"
      },
      {
        "command": "cpp-class-maker.newTemplateClass",
        "title": "New Template Class"
      },
      {
        "command": "cpp-class-maker.newTemplateClassNoTest",
        "title": "New Template Class w/o test"
      }
    ],

    "menus": {
      "explorer/context": [
        {
          "group": "navigation",
          "submenu": "cpp-class-maker.make"
        }
      ],
      "cpp-class-maker.make": [
        {
          "command": "cpp-class-maker.newClass"
        },
        {
          "command": "cpp-class-maker.newClassNoTest"
        },
        {
          "command": "cpp-class-maker.newHeader"
        },
        {
          "command": "cpp-class-maker.newTemplateClass"
        },
        {
          "command": "cpp-class-maker.newTemplateClassNoTest"
        }
      ]
    },

    "submenus": [
      {
        "id": "cpp-class-maker.make",
        "label": "New Class"
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
